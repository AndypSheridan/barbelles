{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:react/jsx-runtime"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"react/no-unescaped-entities": ["error", { "forbid": [">", "}"] }],
		"react/react-in-jsx-scope": "off",
		"react/prop-types": "off",
		"react/no-children-prop": 0,
		"no-empty": ["error", { "allowEmptyCatch": true }],
		"no-unused-vars": "off"
	}
}
